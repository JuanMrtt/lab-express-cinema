<div class="container">

    <div class="row align-items-center">

        <div class="col-md-3">
            <img src="{{image}}">
        </div>

        <div class="col-md-9 ">
            <div><a href="/movies/">Go back</a></div>

            <h3>{{title}}</h3>
            <h4>Director: {{director}}</h4>
            <p>Stars:</p>
            <ul>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{description}}</p>

            {{#each showtimes}}
            {{this}} |
            {{/each}}
        </div>

    </div>

</div>